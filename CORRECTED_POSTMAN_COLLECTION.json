{
	"info": {
		"_postman_id": "video-speech-api-corrected",
		"name": "Video API with Speech Transcription - CORRECTED",
		"description": "Working API for video face extraction and speech transcription",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Upload Video",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"type": "formdata",
					"formdata": [
						{
							"key": "file",
							"type": "file",
							"src": "",
							"description": "Video file to upload (MP4, AVI, MOV, etc.)"
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/api/videos/upload",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "upload"]
				},
				"description": "Upload video for both face extraction and speech transcription"
			}
		},
		{
			"name": "2. Get Video Status",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/{{video_id}}/status",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "{{video_id}}", "status"]
				},
				"description": "Check processing status for both video and transcription"
			}
		},
		{
			"name": "3. Get Speech Transcription ⭐ NEW",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/transcription/{{video_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "transcription", "{{video_id}}"]
				},
				"description": "Get timestamped speech transcription like [5.72s - 7.78s]: Can I come in, ma'am?"
			}
		},
		{
			"name": "4. Get Pitch Analysis ⭐ NEW",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/pitch-analysis/{{video_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "pitch-analysis", "{{video_id}}"]
				},
				"description": "Get pitch analysis and emotion classification"
			}
		},
		{
			"name": "5. Transcribe Only ⭐ NEW",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/transcribe-only/{{video_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "transcribe-only", "{{video_id}}"]
				},
				"description": "Re-transcribe existing video without reprocessing faces"
			}
		},
		{
			"name": "6. Get Video Frames",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/{{video_id}}/frames?skip=0&limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "{{video_id}}", "frames"],
					"query": [
						{
							"key": "skip",
							"value": "0"
						},
						{
							"key": "limit",
							"value": "10"
						}
					]
				},
				"description": "Get extracted frames with face detection data"
			}
		},
		{
			"name": "7. Download Frames",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/{{video_id}}/download-frames?faces_only=false",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "{{video_id}}", "download-frames"],
					"query": [
						{
							"key": "faces_only",
							"value": "false"
						}
					]
				},
				"description": "Download all frames as ZIP file"
			}
		},
		{
			"name": "8. List All Videos",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos?skip=0&limit=10",
					"host": ["{{base_url}}"],
					"path": ["api", "videos"],
					"query": [
						{
							"key": "skip",
							"value": "0"
						},
						{
							"key": "limit",
							"value": "10"
						}
					]
				},
				"description": "Get list of all processed videos"
			}
		},
		{
			"name": "9. Reprocess Video",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"type": "raw",
					"raw": "{\n    \"frame_interval\": 60\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/videos/{{video_id}}/reprocess",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "{{video_id}}", "reprocess"]
				},
				"description": "Reprocess video with different settings"
			}
		},
		{
			"name": "10. Delete Video",
			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/videos/{{video_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "videos", "{{video_id}}"]
				},
				"description": "Delete video and all associated data"
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string",
			"description": "Base URL for the API"
		},
		{
			"key": "video_id",
			"value": "688e84127de1ae75a73af23b",
			"type": "string",
			"description": "Video ID from upload response - UPDATE THIS after uploading"
		}
	]
}
